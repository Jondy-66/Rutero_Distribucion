
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isAdmin() { return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador'; }
    function isSupervisor() { return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Supervisor'; }
    function isAssignedAgent(data) { return request.auth.uid == data.agent_id; }

    match /users/{userId} {
      allow read: if isSignedIn(); // Permite que cualquier usuario vea los perfiles (necesario para asignaciones y supervisi√≥n)
      allow write: if isAdmin();
    }

    match /customers/{customerId} {
      allow read, update: if isSignedIn() && (isAssignedAgent(resource.data) || isAdmin());
      allow create: if isAdmin();
      allow delete: if isAdmin();
    }

    match /sales/{saleId} {
      allow read: if isSignedIn() && (isAssignedAgent(resource.data) || isAdmin());
      allow create: if isSignedIn() && (isAssignedAgent(request.resource.data) || isAdmin());
      allow delete: if isAdmin();
    }

    match /calls/{callId} {
      allow read: if isSignedIn() && (isAssignedAgent(resource.data) || isAdmin());
      allow create: if isSignedIn() && (isAssignedAgent(request.resource.data) || isAdmin());
      allow delete: if isAdmin();
    }
    
    // Reglas existentes para Rutero (compatibilidad)
    match /clients/{clientId} { allow read, write: if isSignedIn(); }
    match /routes/{routeId} { allow read, write: if isSignedIn(); }
    match /notifications/{id} { allow read, write: if isSignedIn(); }
    match /phoneContacts/{id} { allow read, write: if isSignedIn(); }
  }
}
